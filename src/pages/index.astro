---
import Layout from '@layouts/Default.astro';
import ActionCard from '@components/ActionCard.astro';

const title = 'Home';

const GCAL_APPT_ID = process.env.GCAL_APPT_ID;
---

<Layout title={title}>
<section>
	<ActionCard id="cta"
		title="Ready To Supercharge Your Business?"
		description="Learn more about how our team can help you worry-less about IT headaches and enable you to focus on managing your business with absolute confidence.">
		<!-- Google Calendar Appointment Scheduling begin -->
		<script define:vars={{GCAL_APPT_ID}} is:inline>
		(function() {
			var target = document.currentScript;
			window.addEventListener('load', function() {
				calendar.schedulingButton.load({
					url: `https://calendar.google.com/calendar/appointments/schedules/${GCAL_APPT_ID}`,
					color: '#0494f1',
					label: 'Schedule a Consultation'.toUpperCase(),
					target,
				});
			});
		})();
		</script>
		<!-- end Google Calendar Appointment Scheduling -->
	</ActionCard>
</section>
<section></section>
</Layout>

<style>
section {
	display: flex;
	align-items: center;
	justify-content: center;
	#cta {
		margin: 64px 0;
	}
}
</style>
